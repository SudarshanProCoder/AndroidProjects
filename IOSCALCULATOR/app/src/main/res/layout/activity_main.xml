<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/output"
        android:fontFamily="@font/roboto_thin"
        android:gravity="end"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_thin"
        android:gravity="end"

        android:paddingRight="15dp"
        android:textColor="@color/numberbutton"
        android:textSize="46sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/ac"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sp_buttons"
                android:text="AC"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/action"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/sp_buttons"
                android:text="+/-"

                android:textSize="28dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/module"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/sp_buttons"
                android:text="%"

                android:textSize="28dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/division"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_buttons"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            >

            <Button
                android:id="@+id/btn7"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/number_buttons"
                android:text="7"

                android:textColor="#fefefe"

                android:textSize="28dp"
                />

            <Button
                android:id="@+id/btn8"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="8"

                android:textColor="@color/white"
                android:textSize="28dp"

              />

            <Button
                android:id="@+id/btn9"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="9"

                android:textColor="@color/white"
                android:textSize="28dp"

                 />

            <Button
                android:id="@+id/multiplication"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_buttons"
                android:text="×"

                android:textColor="@color/white"
                android:textSize="28dp"

                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/btn4"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/number_buttons"
                android:text="4"

                android:textColor="@color/white"
                android:textSize="28dp"
         />

            <Button
                android:id="@+id/btn5"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="5"

                android:textColor="@color/white"
                android:textSize="28dp"

                />

            <Button
                android:id="@+id/btn6"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="6"

                android:textColor="@color/white"
                android:textSize="28dp"

                 />

            <Button
                android:id="@+id/minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_buttons"
                android:text="−"

                android:textColor="@color/white"
                android:textSize="28dp"

                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            >

            <Button
                android:id="@+id/btn1"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/number_buttons"
                android:text="1"
                android:textColor="@color/white"

                android:textSize="28dp"
         />

            <Button
                android:id="@+id/btn2"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="28dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btn3"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="28dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnaddition"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_buttons"
                android:text="+"
                android:textColor="@color/white"

                android:textSize="28dp"


                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/btn0"

                android:layout_width="176dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_0"
                android:paddingLeft="20dp"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="38dp"
              />


            <Button
                android:id="@+id/btnDot"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/number_buttons"
                android:text="."
                android:textColor="@color/white"
                android:textSize="40dp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEqual"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/operation_buttons"
                android:text="="
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="40dp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>